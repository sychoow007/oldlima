@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Merchello.Core
@using OldLima.Controllers


<h2>Address</h2>
<table>
    <tr>
        <td>

            @using (Html.BeginUmbracoForm<CheckoutController>("SaveAddress", new { @class = "form form-horizontal", role = "form" }))
            {

                @Html.Action("RenderAddressForm", "Checkout", new { addressType = AddressType.Shipping })

                <div class="text-right">
                    <input type="submit" value="Proceed to Next Step" />
                </div>


            }

        </td>
        <td width="100"></td>
        <td>
            @Html.Action("RenderInvoiceSummary", "Checkout", new { dataFromInvoice = false, invoiceKey = Guid.Empty })

        </td>
    </tr>
</table>