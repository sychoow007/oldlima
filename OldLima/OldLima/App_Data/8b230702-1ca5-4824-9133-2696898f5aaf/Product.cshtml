@inherits Umbraco.Web.Mvc.UmbracoViewPage<ProductModel>
@using Merchello.Bazaar
@using Merchello.Bazaar.Models.ViewModels
@using System.Web.Mvc.Html
@using Umbraco.Web
@{
    Layout = "Master.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <h1>@Model.Name</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <img class="img-responsive" src="@Model.GetCropUrl(propertyAlias:"image", height: 300)" alt="@Model.ProductData.Name">

        @if (Model.ProductData.ProductVariants.Any())
        {
            <h4 class="pull-right">@Model.FormattedPrice()</h4>
        }
        <h4>
            <a href="#">@Model.Name</a>
        </h4>
        @Model.Description
    </div>
    <div class="col-md-2 pull-right">
        @Html.Action("RenderAddToBasket", "BazaarBasket", new { area = "Bazaar", model = Model })
    </div>
</div>
