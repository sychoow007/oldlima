@inherits Umbraco.Web.Mvc.UmbracoViewPage<WishListModel>
@using Merchello.Bazaar
@using Merchello.Bazaar.Models.ViewModels
@{
    Layout = "Master.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <h1>@Model.Name</h1>
    </div>
</div>

@if (Model.WishListTable.Items.Any())
{
    @Html.ThemedPartial(Model.Theme, "WishListTable", Model.WishListTable)
}
else
{
    <p><a href="@Model.WishListTable.ContinueShoppingPage.Url">There is currenly nothing in your wish list.</a></p>
}
